{
  "compilerOptions": {
    "strict": true,
    "sourceMap": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "es2018",
    "lib": ["es2018"],
    "declaration": true,
    "skipLibCheck": true,
    "types": ["jest", "node"],
    "outDir": "dist",
    "noEmit": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules/**/*", "dist", "examples"]
}
